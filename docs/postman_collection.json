{
  "info": {
    "name": "ecommerce-backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth Register",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": "{{baseUrl}}/api/auth/register",
        "body": {
          "mode": "raw",
          "raw": "{\"email\":\"user@example.com\",\"password\":\"password\",\"fullName\":\"User\"}"
        }
      }
    },
    {
      "name": "Auth Login (User)",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": "{{baseUrl}}/api/auth/login",
        "body": {
          "mode": "raw",
          "raw": "{\"email\":\"user@example.com\",\"password\":\"password\"}"
        }
      }
    },
    {
      "name": "Auth Login (Admin)",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": "{{baseUrl}}/api/auth/login",
        "body": {
          "mode": "raw",
          "raw": "{\"email\":\"admin@example.com\",\"password\":\"admin123\"}"
        }
      }
    },
    {
      "name": "Get Products",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/products"
      }
    },
    {
      "name": "Search Products",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/products/search?keyword=wireless"
      }
    },
    {
      "name": "Create Category (Admin)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{adminToken}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": "{{baseUrl}}/api/categories",
        "body": {
          "mode": "raw",
          "raw": "{\"name\":\"Electronics\",\"description\":\"Devices\"}"
        }
      }
    },
    {
      "name": "Create Product (Admin)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{adminToken}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": "{{baseUrl}}/api/products",
        "body": {
          "mode": "raw",
          "raw": "{\"name\":\"Headphones\",\"description\":\"Wireless\",\"price\":199.99,\"stockQuantity\":10,\"categoryId\":1}"
        }
      }
    },
    {
      "name": "User Profile",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{userToken}}" }],
        "url": "{{baseUrl}}/api/users/profile"
      }
    },
    {
      "name": "Add To Cart",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{userToken}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": "{{baseUrl}}/api/cart/add",
        "body": {
          "mode": "raw",
          "raw": "{\"productId\":1,\"quantity\":2}"
        }
      }
    },
    {
      "name": "Create Order",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{userToken}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": "{{baseUrl}}/api/orders",
        "body": {
          "mode": "raw",
          "raw": "{\"shippingAddress\":\"123 Main St\",\"items\":[{\"productId\":1,\"quantity\":2}]}"
        }
      }
    },
    {
      "name": "Get Order",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{userToken}}" }],
        "url": "{{baseUrl}}/api/orders/1"
      }
    },
    {
      "name": "Stats (Admin)",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{adminToken}}" }],
        "url": "{{baseUrl}}/api/stats"
      }
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8080" },
    { "key": "userToken", "value": "" },
    { "key": "adminToken", "value": "" }
  ]
}
